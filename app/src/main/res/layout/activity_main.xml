<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity">


    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TST"
        android:id="@+id/tvMsg1"
        android:layout_below="@+id/btnGo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TST"
        android:id="@+id/tvMsg2"
        android:layout_below="@+id/btnGo"
        android:layout_toRightOf="@+id/tvMsg1"
        android:layout_toEndOf="@+id/tvMsg1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TST"
        android:id="@+id/tvMsg3"
        android:layout_alignTop="@+id/tvMsg2"
        android:layout_toRightOf="@+id/tvMsg2"
        android:layout_toEndOf="@+id/tvMsg2" />


</RelativeLayout>
